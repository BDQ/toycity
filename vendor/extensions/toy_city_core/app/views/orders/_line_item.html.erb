<% variant = line_item.variant %>
<tr class="<%= cycle('even', 'odd') %>">
  <td width="120" style="border:1px solid #FEAD6A; background: url(<%= line_item.variant.product.images.first.public_filename(:small) %>) no-repeat center">&nbsp;</td>
  <td valign="top">              
    <%= link_to variant.product.name,  product_path(variant.product) %>
    <%= variant_options variant %><br/>
    <%= truncate(variant.product.description, length = 200, truncate_string = "...") %>
  </td>
  <td valign="top" width="75">
		<%= product_price(line_item) %>
	</td>
  <td valign="top" width="50" align="center">
		<%= f.text_field :quantity, :size => 3, :style => "text-align:center;" %>
	</td>
  <td valign="top" width="75" align="right">
		<%= format_price(product_price(line_item, :format_as_currency => false) * line_item.quantity) unless line_item.quantity.nil? %>
	</td>
</tr>
