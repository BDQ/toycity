<div id="checkout_header">
	<div id="checkout_header_icons">
		<%= image_tag icon == "cart" ? "icons/cart_on.gif" : "icons/cart_off.gif" %>
		<%= image_tag icon == "open_white" ? "icons/open_white_box_on.gif" : "icons/open_white_box_off.gif" %>
		<%= image_tag icon == "closed_white" ? "icons/closed_white_box_on.gif" : "icons/closed_white_box_off.gif" %>
		<%= image_tag icon == "ribbon" ?  "icons/white_box_ribbon_on.gif" : "icons/white_box_ribbon_off.gif" %>
		<%= image_tag icon == "open_brown" ? "icons/brown_box_open_on.gif" : "icons/brown_box_open_off.gif" %>
		<%= image_tag icon == "closed_brown" ? "icons/brown_box_closed_on.gif" : "icons/brown_box_closed_off.gif" %>	
	</div>
	<div id="checkout_header_text"><%= text %></div>
</div>
