<table class="order-summary">
	<thead>
	  <tr>
	    <th colspan="4" id="order-num">Your order number is: <%=@order.number%></th>
	  </tr>
		<tr>
			<td>&nbsp;</td>
		</tr>
	  <tr>
	    <th width="200"><%= t('Item Description') %></th>
	    <th width="100"><%= t('Price') %></th>
	    <th width="100" align="center"><%= t('Qty') %></th>
	    <th width="100" align="right"><%= t('Total') %></th>
	  </tr>
	</thead>
	<tbody>
	  <% @order.line_items.each do |item| %>
	  <tr >
	    <td width="300"><%=item.variant.product.name-%> <%= "(" + variant_options(item.variant) + ")" unless item.variant .option_values.empty? %></td>
	    <td valign="top"><%= number_to_currency item.price -%></td>
	    <td valign="top" align="center"><%=item.quantity-%></td>
	    <td valign="top" align="right"><%= number_to_currency (item.price * item.quantity)-%></td>
	  </tr>
	  <% end %>      
	  <tr id="subtotal-row">
	    <td valign="bottom" colspan="3" align="right"><b><%= t('Subtotal') %>:</b></td>
	    <td valign="bottom" align="right"><%= number_to_currency @order.item_total -%></td>
	  </tr>
	  <tr>
	    <td colspan="3" align="right"><b>VAT:</b></td>
	    <td align="right"><%= number_to_currency @order.tax_amount -%></td>
	  </tr>
	  <tr>
	    <td colspan="3" align="right"><b><%= t('Shipping') %>:</b></td>
	    <td align="right"><%= number_to_currency @order.ship_amount -%></td>
	  </tr>
	  <tr>
	    <td colspan="3" align="right"><b><%= t('Order Total') %>:</b></td>
	    <td align="right"><%= number_to_currency @order.total -%></td>
	  </tr>
	</tbody>
</table>
