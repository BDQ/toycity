<div id="<%= style %>_scroller">
		<div id="merchcontainer" style="display:block;width:100%;">
			 
			<div id="merchleft">
				<%= image_tag "#{style}_scroller_left.gif", :class => "merchnavarrows_left" %>
			</div><!-- end id=merchleft -->
		 
			<div id="merchcontent">
				<div>
					<div style="width: 3978px;" class="scrollingWrapper">
					  <% featured_products.each do |product| %>
				      <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
				       <div class="productCell" onclick="window.location.href='<%= product_path(product) %>';">
									<div class="productCellImage" style="background: url(<%= product.images.first.public_filename(:small) %>) no-repeat center">&nbsp;</div>
				          <%= link_to product.name, product %>
				          <div class="productCellPrice"><%= product_price(product) %></div>
				        </div>
				      <% end %>
				    <% end %>
					</div><!-- end id=scrollingWrapper -->
				</div>
			</div><!-- end id=toy_scolling_area -->
			
 
			<div id="merchright">
				<%= image_tag "#{style}_scroller_right.gif", :class => "merchnavarrows_right" %>
			</div><!-- end id=merchright -->

			<div id="merchfooter">
			</div>
			
		</div><!-- end id=merchcontainer -->

</div><!-- end id=toys_scroller -->