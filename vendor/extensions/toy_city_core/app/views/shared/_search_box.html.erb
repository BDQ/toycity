<!-- search box -->
<% if controller.controller_name == 'taxons'
  search_path_local = taxon_path(params[:id])
else
  search_path_local = products_path
end -%>
 
<div style="text-align: center;">
<% form_tag search_path_local, :id => 'search_form', :method => 'get' do %>

  <%= image_submit_tag "/images/search_go_button.png", :name => nil, :class => "button" %>
  <%= text_field_tag :search, params[:search] ||= "keyword(s) or product...", {:size => 17, :class => "box", :onclick => "clear_if_default(this);"} %>
<% end %>
</div>