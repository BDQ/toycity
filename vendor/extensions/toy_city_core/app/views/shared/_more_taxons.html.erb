<table id="more_in_taxons_table">
<% 
	rows = (taxons.size / 4.0).ceil
	rows.times do |i| %>
		<tr>
		<td><%= print_taxon_cell(taxons, i, style) %></td>
		<td><%= print_taxon_cell(taxons, (i + rows), style) %></td>
		<td><%= print_taxon_cell(taxons, (i + (rows * 2)), style) %></td>
		<td><%= print_taxon_cell(taxons, (i + (rows * 3)), style) %></td>
	</tr>
<% end %>
</table>

